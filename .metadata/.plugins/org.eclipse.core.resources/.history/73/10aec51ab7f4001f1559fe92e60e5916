package ch01.ex03;

public class IncraseExample2 {

	public static void main(String[] args) {
	  //증감연상자 ++ 
	  //감소연산자 --
		
	    int a = 0;
		System.out.println(a);
		System.out.println(a);
		System.out.println(a);
		
		int b = 0;
		System.out.println();

		System.err.println(b);
		++b; // b = b+1 전위
		System.out.println(b);
		b++; //b =b+1 후위
		System.out.println(b);
		
	      
	          	
	          	
	          			
	
	
				
	}

}
